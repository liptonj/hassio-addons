{
  "name": "meraki-wpn-portal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:inline-styles": "npx ts-node --esm tests/e2e/inline-style-scanner.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "npm run typecheck && playwright test",
    "test:css": "playwright test tests/e2e/visual-css.spec.ts --project=chromium",
    "test:smoke": "npm run typecheck && playwright test tests/e2e/smoke.spec.ts --project=chromium",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:ci": "npm run typecheck && npm run lint && npm run test:unit && playwright test --reporter=list",
    "validate": "npm run typecheck && npm run lint && npm run build",
    "validate:css": "npm run lint:inline-styles && npm run test:css"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.6.0",
    "lucide-react": "^0.294.0",
    "qrcode.react": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.3.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.17"
  }
}
